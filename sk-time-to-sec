#!/bin/bash

declare -i i=0
[[ $1 = *M* ]] && { a=${1%M*}; i+=${a##*[^0-9]}*60; }
[[ $1 = *h* ]] && { a=${1%h*}; i+=${a##*[^0-9]}*3600; }
[[ $1 = *d* ]] && { a=${1%d*}; i+=${a##*[^0-9]}*86400; }
[[ $1 = *w* ]] && { a=${1%w*}; i+=${a##*[^0-9]}*604800; }
# Using year=365.25 days and month=year/12 for leap year alignment
[[ $1 = *m* ]] && { a=${1%m*}; i+=${a##*[^0-9]}*2629800; }
[[ $1 = *y* ]] && { a=${1%y*}; i+=${a##*[^0-9]}*31557600; }
printf %s $i
